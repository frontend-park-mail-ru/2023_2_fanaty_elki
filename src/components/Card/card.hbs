<div class="restaurant-card">
    <img class="restaurant-card__image" src="{{Icon}}" />
    <div class="restaurant-card__info">
        <h2 class="restaurant-card__info__title">{{Name}}</h2>
        <div class="rating">
            <img class="rating__gold-star" src="img/gold_star.svg">
            <div class="rating__container">
                <p class="rating__container__value">{{Rating}}</p>
            </div>
        </div>
    </div>
    <div class="restaurant-card__delivery-info">
        Доставка: {{DeliveryPrice}}₽ &nbsp;
        {{MinDeliveryTime}}-{{MaxDeliveryTime}} минут
    </div>
</div>